<!DOCTYPE html>
<html>
<head>
<% include ../partials/header.ejs %>
</head>

<body>

<% include ../partials/nav.ejs %>

<div class="jumbotron text-center">
  <div class="container">
    <h1>Add a score</h1> 
  </div>
</div>
<div class=container>
  <form action="" method="post" >
    <div class="formgroup">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" placeholder="Enter your full name" />
    </div>

    <div class="formgroup">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" placeholder="Enter your email address" />
    </div>

    <div class="formgroup">
      <label for="tableNumber">Table Number:</label>
      <input type="number" id="tableNumber" name="tableNumber" placeholder="Enter your table number"></input>
    </div>

    <div class="formgroup">
      <label for="ScoreNS">Score NS:</label>
      <input type="number" id="scoreNS" name="scoreNS" placeholder="Enter your north south score"></input>
    </div>

    <div class="formgroup">
      <label for="ScoreEW">Score EW:</label>
      <input type="number" id="scoreEW" name="scoreEW" placeholder="Enter your east west score"></input>
    </div>

    <input type="submit" value="Submit Score" />
  </form>
</div>



</body>
</html>
